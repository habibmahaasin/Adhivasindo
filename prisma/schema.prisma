datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String           @id @default(uuid())
  name             String
  email            String           @unique
  password         String
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  learningModules  LearningModule[] // One user can create many learning modules
}

model LearningModule {
  id          String       @id @default(uuid())
  title       String
  description String
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  user        User         @relation(fields: [userId], references: [id]) // One learning module is created by one user
  competitions Competition[] // One learning module can have many competitions
}

model Competition {
  id              String            @id @default(uuid())
  name            String
  description     String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  learningModuleId String
  learningModule LearningModule    @relation(fields: [learningModuleId], references: [id]) // One competition belongs to one learning module
}
